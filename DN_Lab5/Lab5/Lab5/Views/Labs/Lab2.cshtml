@model Lab5.Models.Lab2DataModel

@{
    ViewData["Title"] = "Lab2";
}

<h2>Lab2 - Tree Painting Calculation</h2>

<form method="post" asp-controller="Labs" asp-action="Lab2">
    <div class="form-group">
        <label for="numberOfTrees">Number of Trees:</label>
        <input type="number" class="form-control" id="numberOfTrees" asp-for="NumberOfTrees" placeholder="Enter number of trees">
        <small class="form-text text-muted">Enter the number of trees (1 - 50).</small>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Calculate</button>
</form>

@if (Model != null)
{
    @if (!string.IsNullOrEmpty(Model.ErrorValue))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorValue
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.Calculated))
    {
        <div class="alert alert-success">
            <strong>Result:</strong> @Model.Calculated
        </div>
    }
}
